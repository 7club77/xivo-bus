FROM python:3.7-slim-buster
LABEL maintainer="Wazo Maintainers <dev@wazo.community>"

RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

RUN apt-get -q update
RUN apt-get -yq install netcat

COPY requirements.txt /usr/src/xivo-bus/requirements.txt
WORKDIR /usr/src/xivo-bus
RUN pip install --upgrade pip
RUN pip install -r requirements.txt

COPY . /usr/src/xivo-bus
COPY integration_tests/assets/bin/entrypoint.sh /usr/bin/entrypoint.sh
COPY integration_tests/assets/services/bus-test/. /usr/src/bus-test

WORKDIR /usr/src
RUN pip install -e xivo-bus
RUN pip install -e bus-test

ENTRYPOINT ["bash", "-c", "/usr/bin/entrypoint.sh"]
